<div class="keep-shopping pv1 mt4 has-text-right">
  <%= link_to 'Keep Shopping', products_path, class: 'btn btn-outline-dark' %>
</div>
<hr />
<section class="section">

 <div class="pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

          <!-- Shopping cart table -->
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Product</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Price</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Quantity</div>
                  </th>
                  <% if(@cart.status == 0) %>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Remove</div>
                  </th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
                 <%= render(@cart.order_items) %>
                 
              </tbody>
              
              
            </table>
          </div>
          <!-- End -->
          <hr />
          	<div class="panel-footer">
					<div class="row text-center">
						<div class="col-xs-9">
							<h4 class="text-right">Total <strong><%= number_to_currency(@cart.total_price) %></strong></h4>
						</div>
						<div class="col-xs-3 d-flex justify-content-center">
            <%= button_to "Checkout", change_status_cart_path(@cart, {:status => 1}), method: :patch,  class: "btn btn-outline-success", style: "margin-right: 15px"%>
              <%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure? " }, class: "btn btn-outline-danger" %>
						</div>
					</div>
				</div>
        
        </div>
      </div>
      </div>
      </div>

</section>